{
    "version": "2.0.0",
    "command": "g++",
    "type": "shell",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "cd",
            "args": [
                "${workspaceRoot}/Intermediate/efw-engine-osx",
                ";clang",
                "-c", "${workspaceRoot}/**/*.cpp",
                // "(find",
                // ".", "-type", "f", "-name", "'*.h'",
                // "-printf", "'-I%h\\n'", "|",
                // "sort", "-u)",
                "-I${workspaceRoot}/Lib/SFML-2.4.2/include",
                "-I${workspaceRoot}/Lib/sol/include",
                "-I${workspaceRoot}/Lib/lua53/include",
                "-I${workspaceRoot}/Source",
                "-std=c++17",
                "-g",
                ";clang",
                "*.o",
                "-o",
                "efw-engine",
                "-framework", "sfml-graphics", "-framework", "sfml-window",
                "-framework", "sfml-system", "-framework", "sfml-audio",
                "-L${workspaceRoot}/Lib/lua53/lib",
                "-llua53",
                "-Wl,-rpath,${workspaceRoot}/Lib/lua53/lib",
                "-lstdc++",
                ";mv", "efw-engine", "${workspaceRoot}/../Game/osx/efw-engine"    
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false
            },
            "problemMatcher": "$gcc"
        }
    ]
}